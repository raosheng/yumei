<div>
<h2>登录</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table class="common table-bordered">
  <tbody>
  <tr>
    <th class='bg'>手机号：</th>
    <td ><%= f.text_field :mobile, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th class='bg'>密码：</th>
    <td><%= f.password_field :password, autocomplete: "off" %></td>
  </tr>

  <% if devise_mapping.rememberable? -%>
    <tr>
      <td><%= f.check_box :remember_me %>记住我</td>
    </tr>
  <% end -%>

  <tr>
    <td colspan="2"><%= f.submit "登录" %><td>
  </tr>
  </tbody>
</table>
<% end %>

<%= render "devise/shared/links" %>
</div>
